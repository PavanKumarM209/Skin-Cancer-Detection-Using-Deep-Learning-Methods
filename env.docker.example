# Docker Environment Variables Example
# Copy this to .env and update with your actual values

# PostgreSQL Database
POSTGRES_DB=skin_cancer_db
POSTGRES_USER=skin_cancer_user
POSTGRES_PASSWORD=SkinCancer2024SecurePass

# Backend API Keys
ROBOFLOW_API_KEY=your_roboflow_api_key_here
WORKSPACE=your_workspace_name
PROJECT=your_project_name
VERSION=1

GROQ_API_KEY=your_groq_api_key_here

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# pgAdmin (Optional - for development)
PGADMIN_EMAIL=admin@skincare.com
PGADMIN_PASSWORD=admin

# Flask Configuration
FLASK_ENV=production
PORT=5001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost

# Optional: SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@skincare.com
SENDGRID_FROM_NAME=Skin Cancer Detection System
