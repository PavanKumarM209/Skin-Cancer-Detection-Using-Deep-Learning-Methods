# Roboflow API Configuration
ROBOFLOW_API_KEY=your_roboflow_api_key_here
WORKSPACE=your_workspace_name
PROJECT=your_project_name
VERSION=1

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Server Configuration
PORT=5001
FLASK_ENV=production

# Database Configuration
# SQLite (Development - Default)
DATABASE_URL=sqlite:///skin_cancer.db

# PostgreSQL (Production - Recommended)
# Note: Use postgresql+psycopg:// for psycopg3 (Python 3.13+)
# Local PostgreSQL:
# DATABASE_URL=postgresql+psycopg://skin_cancer_user:your_password@localhost:5432/skin_cancer_db
# 
# Remote PostgreSQL:
# DATABASE_URL=postgresql+psycopg://user:password@hostname:5432/database
#
# PostgreSQL with SSL (Production):
# DATABASE_URL=postgresql+psycopg://user:password@hostname:5432/database?sslmode=require
#
# For older Python (3.12 and below) with psycopg2:
# DATABASE_URL=postgresql://user:password@localhost:5432/database
#
# Heroku PostgreSQL (automatically provided):
# DATABASE_URL=postgres://user:pass@host:5432/db  (Heroku provides this)
#
# AWS RDS PostgreSQL:
# DATABASE_URL=postgresql+psycopg://user:pass@your-instance.region.rds.amazonaws.com:5432/dbname

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# ML Model Configuration
MODEL_CONFIDENCE_THRESHOLD=60

# SendGrid Email Configuration (for sending reports to patients)
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your-verified-email@example.com
SENDGRID_FROM_NAME=Skin Cancer Detection System

# Alternative: SMTP Email Configuration (Flask-Mail)
# Uncomment and configure if using SMTP instead of SendGrid
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password-here
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# Optional: Cloud Storage (for production)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your_bucket_name
# AWS_REGION=us-east-1

